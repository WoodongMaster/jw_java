package S2day03;

import java.util.Scanner;

public class main {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		StreamEx03 ex = new StreamEx03();
		
		System.out.println("스트림 학생 메뉴");
		int num=-1;
		
		do {
			System.out.println("1.학생, 점수 등록");
			System.out.println("2.리스트 출력");
			System.out.println("0.종료");
			num = scan.nextInt();
		switch(num) {
		case 1:
			ex.Add();
			break;
		case 2:
			ex.print();
			break;
		case 0:
			break;	
			}
		}while(num!=0);
		
		
		System.out.println();
	}

}
